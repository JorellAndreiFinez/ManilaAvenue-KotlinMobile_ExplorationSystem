<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/white_bg"
        android:layout_margin="10dp"
        >

        <ImageButton
            android:id="@+id/closeBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/yellow_circle_bg"
            android:src="@drawable/ic_close_cross"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/forgot_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:fontFamily="@font/montserrat_black"
            android:textColor="@color/Yellow"
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/forgot_password_email"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:textColorHint="@color/LightKhaki"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:background="@drawable/edittxtbg"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/send_reset_email_button"
            android:layout_width="match_parent"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="SEND RESET EMAIL"
            android:layout_marginTop="20dp"
            android:background="@drawable/button4"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>
